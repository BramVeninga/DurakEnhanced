<Window x:Class="DurakTCPTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Durak Enhanced" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="ChatBox" Height="100" IsReadOnly="True" TextWrapping="Wrap" />
            <TextBox x:Name="InputBox" Height="30" Margin="0,10,0,0" />
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Start Server" Click="StartServer_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Connect" Click="Connect_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Send" Click="Send_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
